datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model categories {
  id        Int     @id @default(autoincrement())
  name     String
  description   String
}

model stocks {
  id        Int     @id @default(autoincrement())
  name     String
}

model products {
  id        Int     @id @default(autoincrement())
  brand     String
  model   String
  price   Float
  monthly Float
  badge   String
  category    categories   @relation(fields: [id_category], references: [id])
  id_category  Int
}

